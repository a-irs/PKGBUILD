pkgname=osquery
pkgver=2.11.2
pkgrel=1
pkgdesc="osquery"
arch=('x86_64')
url="https://osquery.io"
source=(https://pkg.osquery.io/linux/$pkgname-${pkgver}_${pkgrel}.linux_x86_64.tar.gz)
sha256sums=('6b9f032bf04a0a938c4cd2a7f24f0f4fef1aca8593661f3801822760b178fdbd')

package() {
    install -d -m755 "$pkgdir"/etc/osquery
    cp -R "$srcdir"/usr/ "$pkgdir"/usr/
    cp -R "$srcdir"/var/ "$pkgdir"/var/
}
